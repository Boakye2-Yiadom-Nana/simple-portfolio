<%= render 'shared/navigation' %>

<div style="max-width: 600px; margin: 0 auto; padding: 20px;">
  <h1><%= @skill.name %></h1>
  
  <div style="background: #f8f9fa; padding: 20px; border-radius: 8px; margin: 20px 0;">
    <p><strong>Skill Level:</strong> <%= @skill.level %>/10</p>
    <p><strong>Description:</strong></p>
    <p><%= simple_format(@skill.description) %></p>
  </div>
  
  <div style="margin-top: 20px;">
    <%= link_to 'Edit This Skill', edit_skill_path(@skill), style: 'background: #ffc107; color: black; padding: 10px 20px; text-decoration: none; border-radius: 4px; margin-right: 10px;' %>
    
    <%= link_to 'Delete This Skill', skill_path(@skill), 
        data: { turbo_method: :delete, turbo_confirm: 'Are you sure you want to delete this skill?' },
        style: 'background: #dc3545; color: white; padding: 10px 20px; text-decoration: none; border-radius: 4px; margin-right: 10px;' %>
    
    <%= link_to 'Back to Skills', skills_path, style: 'background: #6c757d; color: white; padding: 10px 20px; text-decoration: none; border-radius: 4px;' %>
  </div>
</div>